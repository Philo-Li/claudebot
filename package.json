{
  "name": "claude-telegram-bot",
  "version": "1.1.2",
  "description": "Control Claude Code via Telegram",
  "author": {
    "name": "Philo Li",
    "email": "philo.li.official@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Philo-Li/claudebot.git"
  },
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "start": "node bot.js",
    "electron:dev": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "release": "node release.cjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "call-bind-apply-helpers": "^1.0.2",
    "call-bound": "^1.0.4",
    "electron-updater": "^6.7.3",
    "get-intrinsic": "^1.3.0",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  }
}
